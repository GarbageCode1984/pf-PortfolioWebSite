.boxWrap {
    width: 100%;
    height: 80vh;
    display: flex;
    justify-content: center;
    align-items: center;

    .profile {
        width: 25vw;
        height: 40vh;
        border: 1px solid rgba(243, 152, 152, 0.575);
        padding: 10px;
        box-shadow: 5px 5px 10px;
        h1 {
            font-size: 56px;
            font-weight: bold;
            text-shadow: 2px 2px 10px;
            padding-bottom: 20px;
            color: rgb(240, 136, 136);
        }
        p {
            font-size: 18px;
            color: rgb(77, 77, 77);
            padding: 5px 0;
            font-weight: bold;
        }
    }
    .aboutText {
        width: 50vw;
        height: 40vh;
        border: 1px solid rgba(152, 173, 243, 0.575);
        padding: 10px;
        box-shadow: 5px 5px 10px;
        margin-left: 150px;
        position: relative;
        p {
            animation-name: swapColor;
            animation-duration: 3s;
            animation-iteration-count: infinite;
            animation-direction: reverse;
            font-size: 18px;
            color: rgb(76, 76, 77);
            line-height: 1.5;
            font-weight: bold;
        }
        img {
            position: absolute;
            bottom: 0;
            width: 50px;
            right: 3%;
            height: 50px;
        }
        @keyframes swapColor {
            0% {
                color: rgb(0, 0, 0);
            }
            50% {
                color: rgba(97, 96, 96, 0.479);
            }
            100% {
                color: #000;
            }
        }
        .spinnerP {
            color: #fff;
        }
    }
}
@media (max-width: 769px) {
    .boxWrap {
        display: flex;
        flex-direction: column;
        .profile {
            width: 90vw;
            margin-top: 200px;
            margin-bottom: 50px;
        }
        .aboutText {
            width: 90vw;
            margin-left: 0;
        }
    }
}
